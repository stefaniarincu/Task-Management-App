@model TaskManagementApp.Models.Project

<h2 class="text-center mt-5">Edit the project</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">
            @using (Html.BeginForm(actionName: "Edit", controllerName: "Projects",
            method: FormMethod.Post,
            routeValues: new { id = Model.ProjectId }))
            {
                /* @Html.HiddenFor(m => m.CommentId)  */

                @Html.Label("ProjectTitle", "Project Title")
                <br />
                @Html.EditorFor(m => m.ProjectTitle, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(m => m.ProjectTitle, null, new { @class = "text-danger" })
                <br />

                <br />

                @Html.Label("ProjectContent", "Project Content")
                <br />
                @Html.TextArea("ProjectContent", @Model.ProjectContent, new { @class = "form-control summernote" })

                @Html.ValidationMessageFor(m => m.ProjectContent, null, new { @class = "text-danger" })
                <br />

                @Html.HiddenFor(m => m.UserId, new {Model.UserId})

                <br />
                <div class="text-center">
                    <button class="btn btn-sm btn-success" type="submit">Edit Project</button>
                </div>
            }
        </div>
    </div>
</div>


