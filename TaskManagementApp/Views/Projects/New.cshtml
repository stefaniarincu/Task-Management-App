@model TaskManagementApp.Models.Project


<h2 class="text-center mt-5">Add new project</h2>
<br />
<div class="container mt-3">
    <div class="row">
        <div class="col-6 offset-3">

            @using (Html.BeginForm(actionName: "New", controllerName: "Projects",
            method: FormMethod.Post))
            {

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                <input type="hidden" name="UserId" value="organizer" />

                @Html.Label("ProjectTitle", "Project Title", new {@style="font-weight: bold"})
                <br />
                @Html.TextBox("ProjectTitle", null, new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.ProjectTitle, "", new { @class = "text-danger" })
                <br />


                @Html.Label("ProjectContent", "Project Content", new {@style="font-weight: bold"})
                <br />
                @Html.TextArea("ProjectContent", null, new { @class = "form-control summernote" })

                @Html.ValidationMessage("ProjectContent", null, new { @class = "text-danger" })
                <br />
                <br />
                <div class="text-center">
                    <button class="btn btn-success" type="submit">Add project</button>
                </div>
            }

        </div>
    </div>
</div>